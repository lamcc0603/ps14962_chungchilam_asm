<article class="home_banner">
  <img src="./public/images/banner4.jpg" alt="" />
</article>

<main class="login">
  <div class="container login_container">
    <div class="login_title">
      <h1>Đăng nhập</h1>
    </div>
    <form class="login_form">
      <div class="form_control">
        <label>Tài khoản</label>
        <input type="text" placeholder="Nhập tên đăng nhập" />
      </div>
      <div class="form_control">
        <label>Mật khẩu</label>
        <input type="password" placeholder="Nhập mật khẩu" />
      </div>
      <div class="create_container">
        <div class="create_new">
          <span>Bạn chưa có tài khoản ? </span>
          <a href="#" class="text_highlight"><span>Đăng ký</span> </a>
        </div>
        <div class="forgot_pass">
          <a href="#" class="text_gray"><span>Quên mật khẩu ? </span> </a>
        </div>
      </div>
      <div class="form_button">
        <input class="btn_login" value="Đăng nhập" type="submit" />
      </div>
    </form>
  </div>
</main>
